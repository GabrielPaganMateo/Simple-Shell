#include "header.h"
/*
 *
 */
char *get_path(char *tokens)
{
	int i = 0, j = 0, k = 0;
	extern char **environ;
	char *path = NULL, *token = NULL, **dirs = NULL, *cwd = getcwd(NULL, 0);
	struct stat sb;

	while (environ[i] != NULL)
	{
		if (_strcmp(environ[i], "PATH") == 0)
		{
			break;
		}
		i++;
	}

	path = environ[i];
	token = strtok(path, ":");

	while (token != NULL)
	{
		_strcpy(dirs[j], token);
		token = strtok(NULL, ":");
		j++;
	}

	while (dirs[k] != NULL)
	{
		chdir(dirs[k]);
		if (stat(tokens[0], &sb) == 0)
		{
			tokens[0] = _strcat(dirs[k], tokens[0]);
			break;
		}
		k++;
	}
	chdir(cwd);
	return (tokens[0]);
}



int main(int ac, char *av, char **env)
{
	(void)ac;
	(void)av;

	char *ptr = "ls";
	char *string = get_path(ptr);

	printf("%s\n", string);
	return (0);
}
